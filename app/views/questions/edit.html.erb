<%  if @question.errors.any? %>
 <h2> Please correct the following: </h2>
   <ul>
  <% @question.errors.full_messages.each do | message |  %>
     <li> <%= message %> </li>
     <% end %>
   </ul>
 <% end %>

<h1> Edit Your Question </h1>
  <%= form_for(@question) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit "Save Changes" %>
  <% end %>
