
<h2> <% yield(:form_title) %> </h2>
<%= form_for (@question) do |f| %>
  <%= render 'shared/errors', object: @user %>
  <div class ="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class ="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
