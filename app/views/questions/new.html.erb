
<%= form_for (@question) do |f| %>
  <div class ="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class ="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>

 <%  if @question.errors.any? %>
  <h2> Please correct the following: </h2> 
    <ul>
   <% @question.errors.full_messages.each do | message |  %>
      <li> <%= message %> </li>
      <% end %>
    </ul>
  <% end %>
